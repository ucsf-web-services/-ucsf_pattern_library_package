<ul class="pager">
    {% if pagination.pages > 1 %}
        {% if pagination.active > 1 %}
            <li class="pager__item pager-prev"><a href="#">‹ Previous</a></li>
        {% endif %}
        {% for page in 1..pagination.pages %}
            <li class="pager__item {% if page == pagination.active %}pager-current{% endif %}">
             {% if page == pagination.active %}{{ page }}{% else %}<a href="#">{{ page }}</a>{% endif %}
            </li>
        {% endfor %}
        {% if pagination.active < pagination.pages %}
            <li class="pager__item pager-next"><a href="#">Next ›</a></li>
        {% endif %}
    {% endif %}
</ul>
